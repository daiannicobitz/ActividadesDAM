<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/salmon"
        android:layout_margin="8dp"
        app:cardCornerRadius="@dimen/tamaño_letra_grande">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idcat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IDCATEGORIA"
                android:padding="@dimen/padding"/>

            <TextView
                android:id="@+id/nombrecat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRECATEGORIA"
                android:textSize="@dimen/tamaño_letra_grande"
                android:padding="@dimen/padding"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/buttonAgregarCat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:background="@color/salmon_claro"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>