<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/celeste_claro"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
        android:id="@+id/scrollPantalla1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding"
                android:text="@string/text_titulo"
                android:textSize="@dimen/tamaño_letra_grande" />

            <EditText
                android:id="@+id/editTxtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/hint_titulo"
                android:cursorVisible="false"
                android:textSize="@dimen/tamaño_letra"
                android:padding="@dimen/padding"/>

            <TextView
                android:id="@+id/textViewDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_descripcion"
                android:textSize="@dimen/tamaño_letra_grande"
                android:padding="@dimen/padding"/>

            <EditText
                android:id="@+id/editTextDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/hint_descripcion"
                android:inputType="textMultiLine"
                android:minLines="1"
                android:singleLine="false"
                android:cursorVisible="false"
                android:textSize="@dimen/tamaño_letra"
                android:padding="@dimen/padding"
                />

            <TextView
                android:id="@+id/textViewEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_email"
                android:textSize="@dimen/tamaño_letra_grande"
                android:padding="@dimen/padding"
                />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="@string/hint_email"
                android:cursorVisible="false"
                android:textSize="@dimen/tamaño_letra"
                android:padding="@dimen/padding"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/padding">
                <TextView
                    android:id="@+id/textViewPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_precio"
                    android:textSize="@dimen/tamaño_letra_grande"
                    android:padding="@dimen/padding"
                    android:layout_weight="1"/>

                <EditText
                    android:id="@+id/editTextPrecio"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:hint="@string/hint_precio"
                    android:cursorVisible="false"
                    android:textSize="@dimen/tamaño_letra"
                    android:layout_weight="2"
                    android:padding="@dimen/padding"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="@dimen/padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding">

                    <TextView
                        android:id="@+id/textViewCategoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_categoria"
                        android:textSize="@dimen/tamaño_letra_grande"
                        android:layout_weight="5"/>

                    <TextView
                        android:id="@+id/textViewCategoriaSeleccionada"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_categoria_selec"
                        android:textSize="@dimen/tamaño_letra_grande"
                        android:layout_weight="3"/>
                </LinearLayout>

                <Button
                    android:id="@+id/botonCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_boton_categoria"
                    android:textSize="@dimen/tamaño_letra_grande"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textViewPorcentajeDescuento"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/text_descuento"
                    android:layout_weight="1"
                    android:textSize="@dimen/tamaño_letra_grande"
                    android:padding="@dimen/padding"/>
                <Switch
                    android:id="@+id/switchDescuento"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/padding" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_descuento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textViewCero"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/text_cero"
                    android:textSize="@dimen/tamaño_letra"
                    />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:min="0"
                    android:max="100"
                    />
                <TextView
                    android:id="@+id/textViewCien"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/text_cien"
                    android:textSize="@dimen/tamaño_letra"/>
            </LinearLayout>

            <CheckBox
                android:id="@+id/checkBoxRetiro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_retiro_en_persona"
                android:textSize="@dimen/tamaño_letra"/>

            <TextView
                android:id="@+id/textViewDireccionRetiro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_direccion_retiro"
                android:visibility="gone"
                android:textSize="@dimen/tamaño_letra_grande"
                android:padding="@dimen/padding"/>

            <EditText
                android:id="@+id/editTextDireccionRetiro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/hint_direccion_retiro"
                android:visibility="gone"
                android:cursorVisible="false"
                android:textSize="@dimen/tamaño_letra"
                android:padding="@dimen/padding"/>

            <CheckBox
                android:id="@+id/checkBoxTerminosCondiciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_terminos_condiciones"
                android:textSize="@dimen/tamaño_letra"
                android:padding="@dimen/padding"/>

            <Button
                android:id="@+id/buttonPublicar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tamaño_boton"
                android:onClick="Publicar"
                android:visibility="gone"
                android:text="@string/text_publicar"

                android:textSize="@dimen/tamaño_letra_grande"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>